<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.merlin.bright.cory.scorecard.ui.PlayTeamGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teamANameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            tools:text="Team A" />

        <TextView
            android:id="@+id/teamAScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            tools:text="5000" />

        <Button
            android:id="@+id/addPlayerToTeamAButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33ffffff"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:text="@string/plus"
            android:textColor="#ffffffff"
            android:textSize="24sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/teamAPlayerList"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teamBNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            tools:text="Team B" />

        <TextView
            android:id="@+id/teamBScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            tools:text="5000" />

        <Button
            android:id="@+id/addPlayerToTeamBButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#22ffffff"
            android:padding="5dp"
            android:paddingBottom="10dp"
            android:text="@string/plus"
            android:textColor="#ffffffff"
            android:textSize="24sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/teamBPlayerList"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>
